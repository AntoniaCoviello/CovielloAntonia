    <bean id="hospitalSystemSetup" class="my.hospital.setup.HospitalSystemSetup">
        <!-- constructor arg injection example -->
        <constructor-arg ref="hospitalService"/>
    </bean>

    <bean id="hospitalService" class="my.hospital.service.impl.DefaultHospitalService">
        <!-- setter injection example -->
        <property name="modelService" ref="modelService"/>
        <property name="mediaService" ref="mediaService"/>
        <property name="flexibleSearchService" ref="flexibleSearchService"/>
    </bean>
    
    <!-- BEANS ABOUT DAO -->
    <alias name="defaultVisitDao" alias="visitDao"/>
    <bean id="defaultVisitDao" class="my.hospital.dao.DefaultVisitDao" parent="abstractItemDao">
    </bean>
    
  <!-- BEANS ABOUT SERVICES -->
    <alias name="defaultVisitService" alias="visitService"/>
    <bean id="defaultVisitService" class="my.hospital.service.DefaultVisitService">
    <property name="visitDao" ref="visitDao"></property>    
    </bean>
			
		<!-- BEAN ABOUT HANDLER -->
	<bean id="dayHandler" class="my.hospital.dynamic.Handler.defaultDayHandler" scope="tenant" />	
	
	
	<!-- BEAN ABOUT INTERCEPTOR -->	
	<bean id="visitResultInterceptor" class="my.hospital.interceptors.VisitResultInterceptor"/>
	<bean id="VisitInterceptorMapping" class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
    <property name="interceptor" ref="vistResultInterceptor" />
    <property name="typeCode" value="Visit" />
</bean>
 <!-- BEAN ABOUT EVENT/LISTENER -->	
<bean id="resultListener" class="my.hospital.events.ResultEventListener" autowire="byName" />

	<!-- BEAN ABOUT CRONJOB -->	

	<bean id="listVisitJob" class="my.hospital.cronjobs.ListVisitJob" parent="abstractJobPerformable" >
	<property name="visitService" ref="visitService"></property>

	</bean>	
</beans>
